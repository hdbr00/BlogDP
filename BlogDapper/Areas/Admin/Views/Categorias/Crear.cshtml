@model BlogDapper.Models.Categoria
@{
    ViewData["Title"] = "Crear Categoria";
}
<h1>Crear Categoria</h1>

<hr/>
<div class="row bg-light border p-4">
    <div class="col-4 offset-4"></div>
    <form asp-action="Crear">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre de la categoria"/>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form btn-group row mt-4">
            <div class="col-6">
                <input type="submit" value="Crear Categoria" class="btn btn-primary form-control"/>
            </div>
            <div class="col-6">
                <a asp-action="Index" class="btn btn-warning form-control">Volver a lista</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


