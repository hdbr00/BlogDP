@model BlogDapper.Models.Categoria
@{
    ViewData["Title"] = "Editar Categoria";
}
<h1>Editar Categoria</h1>

<hr />
<div class="row bg-light p-4">
    <div class="col-4 offset-4"></div>
    <form asp-action="Editar">
        <!--Se envia el id de la categoria como un campo oculto-->
        <input type="hidden" asp-for="IdCategoria"/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre de la categoria" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form btn-group row mt-4">
            <div class="col-6">
                <input type="submit" value="Editar Categoria" class="btn btn-primary form-control" />
            </div>
            <div class="col-6">
                <a asp-action="Index" class="btn btn-warning form-control">Volver a lista</a>
            </div>
        </div>
    </form>
</div>

