@model IEnumerable<BlogDapper.Models.Comentario>

@{
    ViewData["Title"] = "Lista de Comentario";
}
<div class="row">
    <div class="col-9">
        <h1>Administrador de comentario</h1>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn btn-primary float-end"><i class="bi bi-plus-square"></i> Agregar Comentario</a>
    </div>
</div>
<div class="card bg-light p-3">
    <table class="table" id="tblComentarios">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Mensaje</th>
                <th>Articulo</th>
                <th>Fecha de Creación</th>
                <th>Acciones</th>
            </tr>
        </thead>
  
    </table>
</div>

@section Scripts{
    <script src="~/js/comentarios.js"></script>

}